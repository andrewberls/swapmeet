<p style="font-size: 1.1em;">
  <span style="font-weight: bold">Title:</span>
  <%= @offer.title %>
</p>

<p style="font-size: 1.1em;">
  <span style="font-weight: bold">Description:</span>
  <%= @offer.description %>
</p>

<p>
  User: <%= link_to @offer.user.username, user_path %><%= " +#{@offer.user.up_ratings} -#{@offer.user.down_ratings}" %>
</p>
  <% if @offer.image.present? %>
    <%= image_tag @offer.image.url, :style => "max-width: 100%" %>
  <% end %>
