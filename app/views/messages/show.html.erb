<%= render @messages %>

<div id="new_message">
  <%= form_for(@message) do |f| %>
    <h1><%= "New Message" %></h1>

    <% if @message.errors.any? %>
      <div class="alert alert-error">
        <h3><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h3>

        <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= "To: #{@message.recipient.username}"  %>
      <%= f.text_field :recipient_id, { :hidden => true} %>
    </div>

    <div>
    <%= f.text_area :content %>
    </div>

    <%= f.submit "Send", class: 'btn btn-blue' %>
  <% end %>
</div>