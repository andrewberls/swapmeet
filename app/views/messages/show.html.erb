<h2>Conversation with: <span class="blue"><%= @message.recipient.username %></span></h2>

<div id="messages">
  <%= render @messages %>
</div>

<%= form_for(@message) do |f| %>
  <h2 style="font-weight: normal">New Message</h2>

  <% if @message.errors.any? %>
    <div class="alert alert-error">
      <h3><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h3>
      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :recipient_id, hidden: true %>

  <%= f.text_area :content %>

  <%= f.submit "Send", class: 'btn btn-blue' %>
<% end %>
