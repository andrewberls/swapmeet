<% provide(:title, 'All Messages') %>

<h1><%= link_to "Inbox", inbox_messages_path %> -  All</h1>

<div id="messages" style="border-bottom: 1px solid #ccc">
  <% @messages.each do |message| %>
    <%= render 'message_summary', message: message %>
  <% end %>

  <% if @messages.empty? %>
    You have no messages.
  <% end %>
</div>
